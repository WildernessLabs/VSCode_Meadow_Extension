{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension",
			"type": "extensionHost",
			"preLaunchTask": "npm: webpack",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js"
			]
		},
		{
			"name": "Debug Server",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Debug Build",
			// If you have changed target frameworks, make sure to update the program path.
			"program": "${workspaceFolder}/src/csharp/bin/Debug/net6.0/vscode-meadow.dll",
			"args": [ "--server", "--trace=response" ],
			"cwd": "${workspaceFolder}",
			// For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
			"console": "internalConsole",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
		{
			"name": "Release Extension",
			"type": "extensionHost",
			"preLaunchTask": "npm: webpack",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js"
			],
			"env": {
				"NODE_ENV": "production"
			}
		},
		{
			"name": "Release Server",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Release Build",
			// If you have changed target frameworks, make sure to update the program path.
			"program": "${workspaceFolder}/src/csharp/bin/Release/net6.0/vscode-meadow.dll",
			"args": [ "--server", "--trace=response" ],
			"cwd": "${workspaceFolder}",
			// For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
			"console": "internalConsole",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		},
	],
	"compounds": [
		{
			"name": "Debug Extension + Server",
			"configurations": [
				"Debug Extension",
				"Debug Server"
			]
		},
		{
			"name": "Release Extension + Server",
			"configurations": [
				"Release Extension",
				"Release Server"
			]
		}
	]
}